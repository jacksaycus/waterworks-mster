<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kwater.waterworks.mapper.UserMapper">
    <select id="selectUser" parameterType="string" resultType="org.kwater.domain.User">
        SELECT DISTINCT USER_ID ,NAME, PARTNAME, AUTHORITY AS ROLE FROM USER WHERE USERID = #{userId}
    </select>
</mapper>
